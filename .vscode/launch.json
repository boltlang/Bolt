    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run on Test File",
            "outputCapture": "std",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/bin/bolt.js",
            "args": ["check", "stdlib"],
        }
    ]
}